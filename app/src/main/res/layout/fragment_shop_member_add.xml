<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_10"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_huge"
    android:gravity="center"
    android:shadowColor="#80ffffff"
    android:shadowRadius="3"
    android:textColor="@color/brownish_grey"
    android:letterSpacing="-0.03"
    android:textSize="@dimen/font_larger"
    android:text="ASSIGN ROLES"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_huge"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:id="@+id/user_image"
                android:src="@drawable/flier"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                style="@style/GreyTextStyle"
                android:textSize="@dimen/font_largest"
                android:layout_gravity="center"
                android:id="@+id/user_fullname"
                android:text="Shivnash Saini"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_huge"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/font_largest"
                    android:layout_gravity="start"
                    android:textColor="#ab1014"
                    android:text="Assign Role"/>

                <FrameLayout
                    android:id="@+id/container_roles"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_textbox">

                    <com.checkin.app.checkin.Utility.MultiSpinner
                        android:id="@+id/spinner_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hintText="Roles"
                        app:entries="@array/roles"/>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"

            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"


            android:layout_height="@dimen/button_height_normal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="@dimen/button_height_normal"
                android:layout_gravity="center"
                android:id="@+id/save_button"
                style="@style/ButtonPositiveAction"
                android:gravity="center"
                android:text="SAVE"/>

    </FrameLayout>
    </LinearLayout>

</FrameLayout>