<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Name"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="City"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_edit_profile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Country"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_edit_profile_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Bio"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_edit_profile_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/font_larger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Phone Number"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/font_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_edit_profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_normal"
                    tools:text="1234567890" />

                <TextView
                    android:id="@+id/tv_edit_save_phone"
                    style="@style/RedSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/et_edit_profile_phone"
                    android:layout_alignBottom="@id/et_edit_profile_phone"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingEnd="@dimen/spacing_tiny"
                    android:text="@string/btn_edit"
                    android:textSize="@dimen/font_normal" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_error_phone_number"
                style="@style/RedSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_error_exclamation"
                android:drawablePadding="@dimen/spacing_extra_small"
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="Email"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/font_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_edit_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingEnd="@dimen/spacing_huge"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tv_edit_save_email"
                    style="@style/RedSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/et_edit_profile_email"
                    android:layout_alignBottom="@id/et_edit_profile_email"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingEnd="@dimen/spacing_tiny"
                    android:text="@string/btn_edit"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="This information won't be shared on your profile."
                android:textAlignment="center"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/font_small" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>