<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing_small"
    android:background="@drawable/bordered_card_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_gigantic"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_gigantic"
    android:paddingBottom="@dimen/spacing_normal">

    <TextView
        style="@style/RedHeadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add contact details for bill" />

    <com.checkin.app.checkin.misc.views.SingleBackEditText
        android:id="@+id/et_contact_phone"
        style="@style/RoundedInputTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center_horizontal"
        android:hint="Phone No."
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:padding="@dimen/spacing_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/spacing_gigantic"
            android:layout_height="@dimen/height_horizontal_line"
            android:background="@color/pinkish_grey" />

        <TextView
            style="@style/RedSmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:layout_marginEnd="@dimen/spacing_tiny"
            android:text="OR" />

        <View
            android:layout_width="@dimen/spacing_gigantic"
            android:layout_height="@dimen/height_horizontal_line"
            android:background="@color/pinkish_grey" />

    </LinearLayout>

    <com.checkin.app.checkin.misc.views.SingleBackEditText
        android:id="@+id/et_contact_email"
        style="@style/RoundedInputTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="center_horizontal"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:padding="@dimen/spacing_small" />

    <Button
        android:id="@+id/btn_contact_done"
        style="@style/ButtonRedAlertAction"
        android:layout_width="@dimen/button_width_normal"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="@string/label_done" />

</LinearLayout>