<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_normal"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_variants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_catalog_add_variant"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_add_more_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add more variants"
            android:drawableStart="@drawable/ic_noun_add_red"
            android:drawablePadding="@dimen/spacing_tiny"
            android:fontFamily="@font/josefinsans_semibold"
            android:textStyle="normal"
            android:textColor="@color/primary_red"
            android:textSize="6.5sp"
            android:layout_marginTop="@dimen/spacing_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_variants" />

        <Button
            android:id="@+id/btn_save_variants"
            style="@style/CatalogRedRoundedButton"
            android:text="Save Variants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>