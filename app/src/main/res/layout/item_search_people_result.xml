<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_normal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_result_pic"
        style="@style/LogoImageStyle"
        tools:src="@drawable/flier" />

    <TextView
        android:id="@+id/tv_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GreyTextStyle"
        tools:text="Name"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_gravity="center_vertical" />

    <Button
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_height="@dimen/size_small_button"
        android:layout_marginStart="120dp"
        android:background="@drawable/btn_small_bordered_rouge"
        android:textSize="@dimen/font_extra_small"
        android:textColor="@color/primary_red"
        android:padding="1dp"
        android:text="Following"
        />

</LinearLayout>