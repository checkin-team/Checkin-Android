<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_extra_small"
    tools:context=".Misc.StatusTextViewHolder">
    <ImageView
        android:id="@+id/im_status"
        android:layout_width="@dimen/size_small_icon"
        android:layout_height="@dimen/size_small_icon"
        android:src="@drawable/ic_action_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="More"
        style="@style/GreyTextStyle"
        android:textSize="@dimen/font_small"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintStart_toEndOf="@id/im_status"
        app:layout_constraintTop_toTopOf="@id/im_status"
        app:layout_constraintBottom_toBottomOf="@id/im_status"/>
</android.support.constraint.ConstraintLayout>