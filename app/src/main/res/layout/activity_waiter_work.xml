<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_waiter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_session"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/appbar_main">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/session_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/white"
                    app:contentInsetEnd="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                        app:contentInsetStart="0dp"
                    app:layout_scrollFlags="snap"
                    app:popupTheme="@style/PopupOverlay" />


                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/menu_header"
                    layout="@layout/waiter_appbar_orders" />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:id="@+id/drawer_open"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/noun_364773_cc"/>

                <ImageView
                    android:id="@+id/action_table"
                    android:background="@drawable/noun_table_1214889"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


            </FrameLayout>

        </android.support.design.widget.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_small"
                android:paddingTop="@dimen/spacing_small">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_extra_small"
                    >


                    <android.support.design.widget.CoordinatorLayout
                        android:id="@+id/table_number_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_active_tables"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"

                            android:layout_marginStart="20dp"/>


                    </android.support.design.widget.CoordinatorLayout>

                </FrameLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/table_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:layout_weight=".25"
                        android:background="@drawable/bordered_card_white"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/image_dine_in"
                                android:layout_width="23dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"

                                android:src="@drawable/ic_male"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/action_dine_in"


                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="5"

                                android:textSize="26sp"


                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/image_dine_in"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:id="@+id/action_menu"
                        style="@style/ActionTextView"
                        android:layout_width="40dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/noun_1092662_cc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/scroll_container"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_extra_small"
                    android:layout_marginTop="@dimen/spacing_extra_small">


                    <android.support.design.widget.CoordinatorLayout
                        android:id="@+id/item_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_user_items"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                          />


                    </android.support.design.widget.CoordinatorLayout>

                </FrameLayout>



            <ImageView
                android:id="@+id/Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:textSize="@dimen/font_large"
                android:id="@+id/Deliver_text"
                android:textColor="#ab1014"
                android:letterSpacing="-0.01"
                android:layout_gravity="center"
                tools:text="Delivered "/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extra_small"
                android:layout_marginTop="@dimen/spacing_extra_small">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:elevation="@dimen/card_elevation"
                   >

                </View>

                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/items_delivered_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_delivered_items"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        />


                </android.support.design.widget.CoordinatorLayout>

            </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>





        </LinearLayout>
        <FrameLayout
            android:layout_width="60dp"

            android:layout_gravity="bottom|end"
            android:background="@drawable/oval"

            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_height="54dp">


            <ImageView
                android:id="@+id/floatingActionButton"
                android:layout_width="33dp"
                android:layout_height="30dp"

                android:layout_gravity="center"

                android:backgroundTint="#979797"

                android:src="@drawable/noun_qr_code_1340286" />
        </FrameLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_waiter_profiles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/user_details_header"

        app:menu="@menu/menu_waiter_work">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/menu_header"
        layout="@layout/bottom_navigation_button" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_table_view"
        android:layout_width="wrap_content"
        app:headerLayout="@layout/fragment_active_tables"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false">


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>