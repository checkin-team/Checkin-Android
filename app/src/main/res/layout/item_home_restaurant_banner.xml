<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_small">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_restaurant_banner"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_small"
        app:cardCornerRadius="@dimen/card_corner_radius_small"
        app:cardElevation="@dimen/card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_restaurant_banner_distance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_small_icon"
                android:src="@drawable/ic_distance_walking"
                app:layout_constraintBottom_toBottomOf="@id/tv_restaurant_banner_navigate"
                app:layout_constraintEnd_toEndOf="@id/im_restaurant_banner_cuisines"
                app:layout_constraintStart_toStartOf="@id/im_restaurant_banner_cuisines"
                app:layout_constraintTop_toTopOf="@id/tv_restaurant_banner_navigate" />

            <TextView
                android:id="@+id/tv_restaurant_banner_distance"
                style="@style/GreyJosefinsSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                app:layout_constraintBottom_toBottomOf="@id/im_restaurant_banner_distance"
                app:layout_constraintStart_toEndOf="@id/im_restaurant_banner_distance"
                app:layout_constraintTop_toTopOf="@id/im_restaurant_banner_distance"
                tools:text="3 KM" />

            <TextView
                android:id="@+id/tv_restaurant_banner_count_checkins"
                style="@style/WhiteJosefinsExtraSmallTextStyle"
                android:layout_width="@dimen/button_width_short"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_tiny"
                android:background="@drawable/background_rectangle_purple_gradient"
                android:gravity="center"
                android:textSize="@dimen/font_extra_small"
                app:layout_constraintBottom_toTopOf="@id/tv_restaurant_banner_navigate"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Checkin 2k" />

            <TextView
                android:id="@+id/tv_restaurant_banner_navigate"
                style="@style/GreyJosefinsExtraSmallTextStyle"
                android:layout_width="@dimen/button_width_short"
                android:layout_height="@dimen/button_height_short"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="@drawable/btn_small_bordered_grey"
                android:clickable="true"
                android:drawableStart="@drawable/ic_navigate_arrow"
                android:drawablePadding="@dimen/spacing_tiny"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_tiny"
                android:text="Navigate"
                android:textSize="@dimen/font_tiny"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/im_restaurant_banner_cuisines"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_small_icon"
                android:layout_marginStart="@dimen/spacing_medium"
                android:src="@drawable/ic_banner_cuisines"
                app:layout_constraintBottom_toBottomOf="@id/tv_restaurant_banner_count_checkins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_restaurant_banner_count_checkins" />

            <TextView
                android:id="@+id/tv_restaurant_banner_cuisines"
                style="@style/GreyJosefinsSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                app:layout_constraintBottom_toBottomOf="@id/im_restaurant_banner_cuisines"
                app:layout_constraintStart_toEndOf="@id/im_restaurant_banner_cuisines"
                app:layout_constraintTop_toTopOf="@id/im_restaurant_banner_cuisines"
                tools:text="Pure Veg  American  Burgers" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius_small"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_restaurant_image_banner">

            <ImageView
                android:id="@+id/im_restaurant_banner_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|center"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_inner_shadow_gradient" />

            <TextView
                android:id="@+id/tv_restaurant_banner_name_locality"
                style="@style/WhiteJosefinsTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/spacing_elevation_fix_extreme_tiny"
                android:fontFamily="@font/josefinsans_semibold"
                android:gravity="center_horizontal"
                android:shadowColor="#80ffffff"
                android:shadowRadius="3"
                tools:text="Grey Orange - Lavel Road " />

            <TextView
                android:id="@+id/tv_restaurant_banner_rating"
                style="@style/WhiteSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/spacing_extra_small"
                android:background="@drawable/background_rectangle_green_gradient"
                android:paddingStart="@dimen/spacing_tiny"
                android:paddingEnd="@dimen/spacing_tiny"
                android:text="4.4" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>