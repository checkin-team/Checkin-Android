<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_as_payment_options_amount"
            style="@style/RedTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:textSize="@dimen/font_larger"
            tools:text="$ 234.90" />

        <TextView
            style="@style/PinkishGreySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/label_payable_amount"
            android:textSize="@dimen/font_normal" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/cash_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/payment_card_logo"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/background_textbox"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="@dimen/button_height_normal"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:scaleType="fitXY"
                            android:padding="@dimen/spacing_tiny"
                            android:src="@drawable/ic_cash_grey" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Cash" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="@dimen/size_large_button"
                            android:layout_height="@dimen/size_small_button"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/rounded_rectangle_light_grey"
                            android:gravity="center"
                            android:text="@string/select" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paytm_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/payment_card_logo"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/background_textbox"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/payment_card_logo"
                            android:layout_height="@dimen/button_height_normal"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:padding="@dimen/spacing_extra_small"
                            android:src="@drawable/ic_paytm_logo" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/spacing_extra_small"
                            android:text="" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="@dimen/size_large_button"
                            android:layout_height="@dimen/size_small_button"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/rounded_rectangle_light_grey"
                            android:gravity="center"
                            android:text="@string/select" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:weightSum="2"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/gpay_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/payment_card_logo"
                        android:layout_margin="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/background_textbox"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:src="@drawable/ic_gpay_logo" />

                        <TextView
                            style="@style/WhiteSmallTextStyle"
                            android:layout_width="@dimen/size_large_button"
                            android:layout_height="@dimen/size_small_button"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="34dp"
                            android:background="@drawable/rounded_rectangle_red"
                            android:gravity="center"
                            android:text="@string/link" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/credit_debit_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/payment_card_logo"
                        android:layout_margin="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/background_textbox"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/payment_card_logo"
                            android:layout_height="@dimen/button_height_normal"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:src="@drawable/ic_credit_debit_card" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/spacing_extra_small"
                            android:text="Credit &amp; Debit Cards" />

                        <TextView
                            style="@style/WhiteSmallTextStyle"
                            android:layout_width="@dimen/size_large_button"
                            android:layout_height="@dimen/size_small_button"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_rectangle_red"
                            android:gravity="center"
                            android:text="@string/link" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:weightSum="2"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/net_banking_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/payment_card_logo"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_textbox"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/payment_card_logo"
                            android:layout_height="@dimen/button_height_normal"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:src="@drawable/ic_net_banking" />

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/spacing_extra_small"
                            android:text="Net Banking" />

                        <TextView
                            style="@style/WhiteSmallTextStyle"
                            android:layout_width="@dimen/size_large_button"
                            android:layout_height="@dimen/size_small_button"
                            android:layout_gravity="bottom|center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_rectangle_red"
                            android:gravity="center"
                            android:text="@string/link" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <TextView
        style="@style/GreySmallTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center"
        android:text="** Pro Tip: Promo Codes are applicable on online payment **" />


</LinearLayout>