<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.checkin.app.checkin.User.PersonalProfile.UserProfilePersonalActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_upper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_below">

        <ImageView
            android:id="@+id/im_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/flier" />

        <ImageView
            android:id="@+id/im_shadow_upper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_gigantic"
            android:scaleType="fitXY"
            android:src="@drawable/shadow_top"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_height_normal"
            android:layout_height="@dimen/button_height_normal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/im_edit_profile_pic"
            android:layout_width="@dimen/button_height_normal"
            android:layout_height="@dimen/button_height_normal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/im_edit_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/im_shadow_lower"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/shadow_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            />



        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_huge"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:fontFamily="@font/amiri"
            android:paddingRight="@dimen/spacing_extra_small"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            tools:text="250"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_heading"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_checkins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spacing_huge"
            android:fontFamily="@font/amiri"
            android:paddingRight="@dimen/spacing_extra_small"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            tools:text="250"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_heading"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/spacing_huge"
            android:layout_marginRight="@dimen/spacing_normal"
            android:fontFamily="@font/amiri"
            android:paddingRight="@dimen/spacing_extra_small"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            tools:text="250"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_heading"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:fontFamily="sans-serif-light"
            android:paddingRight="@dimen/spacing_tiny"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            android:text="Followers"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:id="@+id/tv_label_followers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_user_checkins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spacing_large"
            android:fontFamily="sans-serif-light"
            android:paddingRight="@dimen/spacing_tiny"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            android:text="CheckIns"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_normal"
            android:fontFamily="sans-serif-light"
            android:paddingRight="@dimen/spacing_tiny"
            android:shadowColor="#fff"
            android:shadowRadius="7"
            android:text="Reviews"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/container_user_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/curved_white_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_above">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/container_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:shadowColor="@color/black"
                    tools:text="Ishu Darshan"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_larger"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:layout_alignStart="@id/tv_display_name"
                    android:layout_below="@id/tv_display_name"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_normal"
                    tools:text="Lyon,France"
                    android:textColor="@color/pinkish_grey" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_city"
                    android:layout_alignTop="@id/tv_display_name">

                    <TextView
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/spacing_extra_large"
                        android:background="@drawable/curve11"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:text="Edit Profile"
                        android:textColor="@color/primary_red"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="@dimen/font_normal"
                        />

                    <ImageView
                        android:id="@+id/im_btn_following"
                        android:layout_width="@dimen/spacing_huge"
                        android:layout_height="@dimen/spacing_large"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="-4dp"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginTop="-4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_unfriend"
                        android:visibility="invisible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:background="@drawable/background_card_white_shadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_header">

                <TextView
                    android:id="@+id/tv_hobby"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Blogger"
                    android:textColor="@color/pinkish_grey"
                    android:textSize="@dimen/font_small_heading"/>

                <TextView
                    android:id="@+id/tv_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hobby"
                    android:paddingBottom="@dimen/spacing_extra_small"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:text="Follow our Food and Travel Journey 🍔🍕✈️⛵️\n🎥: Content Creators\n📍: MIA / NYC / LA 🌎"
                    android:textAlignment="textStart"
                    android:textColor="@color/brownish_grey"
                    />

            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
