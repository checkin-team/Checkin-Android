<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_review_image"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/ll_review_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    <ImageView
        android:id="@+id/review_image_thumbnails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/dummy_shop"
        android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ll_review_image"
        app:layout_constraintRight_toRightOf="@id/ll_review_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

    <com.rd.PageIndicatorView
        android:id="@+id/indicator_review_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/ll_review_image"
        app:layout_constraintRight_toRightOf="@id/ll_review_image"
        app:layout_constraintTop_toBottomOf="@id/ll_review_image"
        app:piv_viewPager="@id/pager_cover"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_unselectedColor="@color/pinkish_grey"
        app:piv_selectedColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_grey"
        app:layout_constraintLeft_toLeftOf="@id/indicator_review_images"
        app:layout_constraintRight_toRightOf="@id/indicator_review_images"
        app:layout_constraintTop_toBottomOf="@id/indicator_review_images"
        tools:text="Cheesy Does it"
        android:textColor="@color/white"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>