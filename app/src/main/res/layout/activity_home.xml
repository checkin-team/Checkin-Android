<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_home"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/brownish_grey"
                app:contentInsetStart="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:paddingStart="@dimen/spacing_extra_small"
                    android:paddingEnd="@dimen/spacing_extra_small"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_home_navigation"
                        android:layout_width="@dimen/size_small_icon"
                        android:layout_height="@dimen/size_small_icon"
                        android:layout_gravity="center|start"
                        android:src="@drawable/ic_navigation_white"
                        android:tint="@color/brownish_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/spacing_huge">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_medium_icon"
                        android:layout_height="38dp"
                        android:scaleType="fitXY"
                       android:layout_gravity="center"
                        android:src="@drawable/check_in_logo_no_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_extra_small"
                        android:orientation="vertical">

                        <TextView
                            style="@style/GreySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Location" />

                        <TextView
                            android:id="@+id/tv_action_bar_home_location"
                            style="@style/GreyHeadingStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/aqua_blue"
                            android:text="Bengaluru" />

                    </LinearLayout>

                    </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="@dimen/spacing_extra_tiny"
                            android:background="@color/lightest_grey"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/im_search_home"
                        android:layout_width="@dimen/size_small_icon"
                        android:layout_height="@dimen/size_small_icon"
                        android:layout_gravity="end|center"
                        android:src="@drawable/ic_search_grey" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.checkin.app.checkin.Utility.DynamicSwipableViewPager
                android:id="@+id/vp_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_tab_container"
                android:layout_below="@+id/toolbar_home" />

            <FrameLayout
                android:id="@+id/bottom_tab_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <FrameLayout
                    android:id="@+id/container_home_session_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/container_home_session_active_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_red"
                        android:gravity="center"
                        android:padding="@dimen/spacing_small"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_home_session_active_status"
                            style="@style/WhiteSmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/ic_location_marker_white"
                            android:drawablePadding="@dimen/spacing_extra_small"
                            android:textAllCaps="true"
                            tools:text="Live at Restaurant" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_home_session_waiting_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_two"
                        android:padding="@dimen/spacing_small"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_home_session_wait_qr_busy"
                            style="@style/GreySmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_dining_qr_busy"
                            android:drawablePadding="@dimen/spacing_extra_small"
                            tools:text="Kindly Wait. Dine in request sent to Shivansh." />

                        <ImageView
                            android:id="@+id/im_home_session_wait_cancel"
                            android:layout_width="@dimen/size_extra_small_icon"
                            android:layout_height="@dimen/size_extra_small_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cancel" />

                    </LinearLayout>

                </FrameLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/background_tab_bottom_shadowed"
                    android:paddingTop="@dimen/spacing_elevation_fix_extreme_tiny"
                    android:paddingBottom="@dimen/spacing_elevation_fix_extreme_tiny"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@android:color/transparent"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed" />

                <LinearLayout
                    android:id="@+id/btn_home_scanner"
                    android:layout_width="@dimen/business_icon"
                    android:layout_height="@dimen/business_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:background="@drawable/shape_oval_aqua_blue_gradient"
                    android:elevation="@dimen/spacing_elevation_fix_extreme_tiny"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/size_small_button"
                        android:layout_height="@dimen/size_small_button"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/spacing_extra_tiny"
                        android:layout_marginEnd="@dimen/spacing_extra_tiny"
                        android:src="@drawable/ic_qr_code_scanner_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="CHECKIN"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_extra_tiny" />

                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/incl_account_base" />

</androidx.drawerlayout.widget.DrawerLayout>
