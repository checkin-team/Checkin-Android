<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                app:contentInsetStart="0dp"
                app:titleTextColor="@color/brownish_grey">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_extra_small"
                    android:paddingEnd="@dimen/spacing_extra_small">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_home_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/spacing_huge"
                        android:orientation="vertical">


                            <ImageView
                                android:id="@+id/im_checkin_logo"
                                android:layout_width="@dimen/width_checkin_logo_icon"
                                android:layout_height="@dimen/height_checkin_logo_icon"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/check_in_logo_no_background"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:id="@+id/tv_home_location_title"
                                    style="@style/GreySmallTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:text="Location"
                                    android:autoSizeTextType="uniform"
                                    android:layout_marginStart="@dimen/spacing_extra_small"
                                    app:layout_constraintStart_toEndOf="@id/im_checkin_logo"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_action_bar_home_location"
                                    app:layout_constraintTop_toTopOf="@+id/im_checkin_logo"/>

                                <TextView
                                    android:id="@+id/tv_action_bar_home_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/josefinsans_regular"
                                    android:text="Bengaluru"
                                    android:gravity="top"
                                    android:layout_marginStart="@dimen/spacing_extra_small"
                                    android:textColor="@color/aqua_blue"
                                    android:textSize="@dimen/font_normal"
                                    app:layout_constraintStart_toEndOf="@id/im_checkin_logo"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_home_location_title"
                                    app:layout_constraintBottom_toBottomOf="@+id/im_checkin_logo" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="@dimen/spacing_extra_tiny"
                            android:layout_marginTop="@dimen/spacing_tiny"
                            android:background="@color/lightest_grey"
                            app:layout_constraintTop_toBottomOf="@+id/im_checkin_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/tv_action_bar_home_location"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/im_search_home"
                        android:layout_width="@dimen/size_small_icon"
                        android:layout_height="@dimen/size_small_icon"
                        android:layout_gravity="end|center"
                        android:src="@drawable/ic_search_grey" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.checkin.app.checkin.Utility.DynamicSwipableViewPager
                android:id="@+id/vp_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar_home"
                android:layout_above="@id/container_bottom_bar" />

