            <ImageView
                android:id="@+id/container_home_session_active_status"
                style="@style/LogoImageStyle"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/spacing_tiny"
                android:background="@drawable/ic_floating_oval"
                android:padding="16dp"
                android:src="@drawable/ic_location_marker_red"
                android:visibility="gone"
                android:layout_above="@+id/container_bottom_bar"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/container_home_session_waiting_status"
                style="@style/LogoImageStyle"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/spacing_tiny"
                android:background="@drawable/ic_floating_oval"
                android:padding="16dp"
                android:src="@drawable/ic_dining_qr_busy"
                android:layout_above="@+id/container_bottom_bar"
                android:layout_alignParentEnd="true" />

            <FrameLayout
                android:id="@+id/container_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_bottom_tab"
                android:layout_gravity="bottom"
                android:background="@drawable/background_tab_bottom_shadowed"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed" />


            <LinearLayout
                android:id="@+id/btn_home_scanner"
                android:layout_width="@dimen/business_icon"
                android:layout_height="@dimen/business_icon"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/spacing_extra_small"
                android:background="@drawable/shape_oval_aqua_blue_gradient"
                android:elevation="@dimen/spacing_elevation_fix_extreme_tiny"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_qr_scanner"
                    android:layout_height="@dimen/size_qr_scanner"
                    android:layout_marginBottom="@dimen/spacing_elevation_fix_extreme_tiny"
                    android:src="@drawable/ic_qr_code_scanner_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:gravity="center"
                    android:text="CHECKIN"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_extra_tiny" />

            </LinearLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_home_navigation"
                android:layout_width="@dimen/size_small_icon"
                android:layout_height="@dimen/size_small_icon"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:contentDescription="@null"
                android:src="@drawable/ic_navigation_white"
                android:elevation="@dimen/spacing_elevation_fix_extreme_tiny"
                android:tint="@color/brownish_grey"/>


        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/incl_account_base" />

</androidx.drawerlayout.widget.DrawerLayout>
