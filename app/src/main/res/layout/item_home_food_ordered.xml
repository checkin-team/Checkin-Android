<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardElevation="@dimen/card_elevation"
    android:layout_margin="@dimen/spacing_small"
    android:elevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    android:layout_width="match_parent"
    android:layout_height="215dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_item_home_food_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Hii shivansh, Your have successfully placed your order"
            android:textColor="#ff4f19"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/im_item_home_restaurant_image"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:translationZ="0dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_item_home_food_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_home_food_status"
            app:layout_constraintVertical_bias="0.098">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:src="@drawable/cover_restaurant_unknown" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/im_item_home_food_status"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"

            android:src="@drawable/ic_rectangle_orange_gradient"
            android:translationY="-5dp"

            app:layout_constraintEnd_toEndOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintStart_toStartOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintTop_toBottomOf="@+id/im_item_home_restaurant_image" />

        <TextView
            android:id="@+id/tv_item_home__food_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered Items"
            android:textColor="@color/pinkish_grey"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toEndOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintTop_toTopOf="@+id/im_item_home_restaurant_image" />

        <TextView
            android:id="@+id/tv_item_home_food_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger king size.. 2 more"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_home__food_order"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_home__food_order" />

        <androidx.cardview.widget.CardView
            android:id="@+id/im_home_food_status_card"
            android:layout_width="230dp"
            android:layout_height="35dp"
            app:cardBackgroundColor="#ccc"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="@dimen/card_corner_radius_small"
            app:cardElevation="0dp"


            app:layout_constraintBottom_toBottomOf="@+id/im_item_home_food_status"
            app:layout_constraintStart_toStartOf="@+id/tv_item_home_food_item">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1.5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/im_home_food_fried"
                    android:layout_width="13dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_fries"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:gravity="center_vertical"
                    android:text="Food is being prepared"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.50"
                    app:layout_constraintStart_toEndOf="@+id/im_home_food_fried"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.45"></TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_home_food_prepared_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Order Id: 123456"
            android:textColor="@color/pinkish_grey"
            android:textSize="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_home_food_status"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_item_food_prepared_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Paid $211"
            android:textColor="@color/pinkish_grey"
            android:textSize="11dp"
            app:layout_constraintBottom_toTopOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintEnd_toEndOf="@+id/item_home_food_prepared_orderId" />


        <FrameLayout
            android:id="@+id/item_home_food_prepared_frameLayout"
            android:layout_width="379dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_rectangle_green_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.571" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_home_food_preparing_orderMore"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Order More"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.38"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fast_forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.16"
                    app:layout_constraintStart_toEndOf="@+id/item_home_food_preparing_orderMore"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:text="Corner House"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/item_home_food_prepared_frameLayout"
            app:layout_constraintStart_toStartOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintTop_toBottomOf="@+id/im_item_home_restaurant_image"
            app:layout_constraintVertical_bias="0.18" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>