<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Home.fragment.HomeTransaction">


    <TextView
        android:id="@+id/tv_home_transaction_order_id"
        style="@style/PinkishGreySmallTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:layout_marginEnd="16dp"
        android:text="Order Id: 12345"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_home_transaction_restaurant_name" />

    <TextView
        android:id="@+id/tv_home_transaction_restaurant_name"

        style="@style/AquaBlueLargeTextStyle"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/spacing_large"

        android:layout_marginTop="@dimen/spacing_small"
        android:text="Grey Orange"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_transaction_cost"
        style="@style/PinkishGreySmallTextStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Amount paid: $998"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_transaction_locality"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_transaction_order_id" />

    <TextView
        android:id="@+id/tv_home_transaction_locality"
        style="@style/PinkishGreyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"


        android:text="Level Road-Bengaluru"
        app:layout_constraintStart_toStartOf="@+id/tv_home_transaction_restaurant_name"
        app:layout_constraintTop_toBottomOf="@id/tv_home_transaction_restaurant_name" />


    <ImageView
        android:id="@+id/im_container_food_status"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_collect_from_the_counter"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_transaction_locality"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_home_transaction_food_status"
        style="@style/OrangeRedLargeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:text="Food Ready"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/im_container_food_status" />

    <TextView
        android:id="@+id/tv_home_transaction_collect_info"
        style="@style/GreySmallTextStyle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Collect form the counter"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_transaction_food_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_transaction_food_status" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f1f1f1"
        app:layout_constraintVertical_bias="0"


        app:layout_constraintBottom_toTopOf="@+id/button_home_transaction_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_container_food_status">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/incl_horizontal_line" />

            <androidx.recyclerview.widget.RecyclerView


                android:id="@+id/rv_user_transaction_session_orders"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:nestedScrollingEnabled="false"
                android:padding="@dimen/spacing_small"
                tools:listitem="@layout/item_invoice_ordered_item" />

            <include layout="@layout/incl_session_invoice" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <Button
        android:id="@+id/button_home_transaction_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_extra_large"
        android:layout_marginTop="@dimen/spacing_incredible"
        android:layout_marginRight="@dimen/spacing_extra_large"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/pinkish_grey"
        android:text="Done"
        android:textAllCaps="false"

        android:textColor="@color/white"
        android:textSize="@dimen/font_large"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

