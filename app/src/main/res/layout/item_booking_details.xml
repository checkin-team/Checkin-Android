<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_medium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_booking_details_name_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/pinkish_grey" />

        <TextView
            android:id="@+id/tv_booking_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_booking_details_name_heading"
            android:layout_marginTop="4dp"
            android:text="Shivansh Saini"
            android:textSize="@dimen/font_normal" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_booking_details_date_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date time"
            android:textColor="@color/pinkish_grey" />

        <TextView
            android:id="@+id/tv_booking_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_booking_details_date_heading"
            android:layout_marginTop="4dp"
            android:text="4:30 PM | 20 November 2019"
            android:textSize="@dimen/font_normal" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:textColor="@color/pinkish_grey" />

        <RelativeLayout
            android:id="@+id/lastrv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/orderId">

            <TextView
                android:id="@+id/tv_booking_details_order_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12345"
                android:textSize="@dimen/font_normal" />
            <TextView
                android:layout_width="90dp"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/ic_rectangle_rouge"
                android:layout_alignParentEnd="true"
                android:layout_height="35dp"/>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>