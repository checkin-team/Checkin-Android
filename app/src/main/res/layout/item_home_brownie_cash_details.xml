<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    android:elevation="@dimen/spacing_elevation_fix_extreme_tiny"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_home_brownie_cash_item_rest_logo"
            style="@style/LogoImageStyle"
            android:layout_margin="@dimen/spacing_normal"
            tools:src="@drawable/dummy_alex" />

        <TextView
            style="@style/GreyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_weight="1"
            android:fontFamily="@font/josefinsans_regular"
            tools:text="Romaâ€™s Cafe" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/button_width_normal"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <TextView
                style="@style/WhiteTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Reveal"
                android:gravity="center"
                android:background="@color/aqua_blue" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>