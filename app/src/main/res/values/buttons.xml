<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.ButtonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Base.TinyButtonWithGreyTextStyle" parent="Base.ButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_tiny</item>
        <item name="android:background">@drawable/background_pinkish_grey_stroke</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="CallButtonTextStyle" parent="Base.TinyButtonWithGreyTextStyle">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:text">@string/action_call</item>
        <item name="android:drawableStart">@drawable/ic_telephone_auricular_with_cable</item>
        <item name="android:drawablePadding">@dimen/spacing_extra_tiny</item>
    </style>

    <style name="NavigateButtonTextStyle" parent="Base.TinyButtonWithGreyTextStyle">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:text">@string/action_navigate</item>
        <item name="android:drawableStart">@drawable/ic_navigate_arrow</item>
        <item name="android:drawablePadding">@dimen/spacing_extra_tiny</item>
    </style>
</resources>