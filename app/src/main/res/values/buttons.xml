<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.ButtonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Base.TinyButtonWithGreyTextStyle" parent="Base.ButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_tiny</item>
        <item name="android:background">@drawable/background_pinkish_grey_stroke</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="CallButtonTextStyle" parent="Base.TinyButtonWithGreyTextStyle">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:text">@string/action_call</item>
        <item name="android:drawableStart">@drawable/ic_telephone_auricular_with_cable</item>
        <item name="android:drawablePadding">@dimen/spacing_extra_tiny</item>
    </style>

    <style name="NavigateButtonTextStyle" parent="Base.TinyButtonWithGreyTextStyle">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:text">@string/action_navigate</item>
        <item name="android:drawableStart">@drawable/ic_navigate_arrow</item>
        <item name="android:drawablePadding">@dimen/spacing_extra_tiny</item>
    </style>

    <style name="AboutUsButtonTextStyle">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:background">@color/white_two</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="LogOutTextStyle">
        <item name="android:background">@color/pinkish_grey</item>
        <item name="android:drawableStart">@drawable/ic_logout</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    
    <style name="GreenPayTextStyle">
        <item name="android:background">@drawable/round_button_green</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_extra_small</item>
    </style>
    
    <style name="GreenPayLargeTextStyle" parent="GreenPayTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
</resources>