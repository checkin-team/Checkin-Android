<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppTheme.AppBarOverlay</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="fontFamily">@font/arial_rounded_mt_bold</item>
    </style>

    <style name="appbar_main" parent="AppTheme.AppBarOverlay">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_grey</item>
    </style>

    <style name="SessionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="actionBarStyle">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppThemeWhiteActionBar" parent="AppThemeWithBar">
        <item name="actionBarStyle">@style/AppThemeWhiteActionBar.ActionBar</item>
        <item name="android:actionBarStyle">@style/AppThemeWhiteActionBar.ActionBar</item>
    </style>

    <style name="AppThemeWhiteActionBar.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/GreyTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_grey</item>
        <item name="android:tabWidgetStyle">@style/AppThemeWhiteActionBar.TabLayout</item>
    </style>

    <style name="AppThemeWhiteActionBar.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/GreyTextStyle</item>
        <item name="tabSelectedTextColor">@color/brownish_grey</item>
        <item name="tabIndicatorColor">@color/brownish_grey</item>
    </style>

    <style name="AppThemeWithBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="actionBarStyle">@style/RougeActionBarTheme</item>
    </style>

    <style name="RougeActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/WhiteHeadingStyle</item>
        <item name="background">@color/primary_red</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
    </style>

    <style name="SessionChatTheme" parent="AppThemeWithBar">
        <item name="android:actionOverflowButtonStyle">@style/ConcernButtonOverflow</item>
        <!-- Support library compatibility -->
        <item name="actionOverflowButtonStyle">@style/ConcernButtonOverflow</item>
    </style>

    <style name="ConcernButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_complain</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="GreyTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="GreyHeadingStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">@dimen/font_small_heading</item>
    </style>

    <style name="WhiteTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="RedTitleStyle" parent="GreyTitleStyle">
        <item name="android:textColor">@color/primary_red</item>
    </style>

    <style name="RedSmallTextStyle" parent="GreySmallTextStyle">
        <item name="android:textColor">@color/primary_red</item>
    </style>

    <style name="GreyTextContainer">
        <item name="android:textViewStyle">@style/GreyTextStyle</item>
    </style>

    <style name="GreySpinnerItem" parent="GreyTextStyle" />

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_width">@dimen/button_height_normal</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
    </style>

    <style name="LogoImageStyle">
        <item name="android:layout_width">@dimen/size_logo</item>
        <item name="android:layout_height">@dimen/size_logo</item>
    </style>

    <style name="LogoLargeImageStyle">
        <item name="android:layout_width">@dimen/size_logo_large</item>
        <item name="android:layout_height">@dimen/size_logo_large</item>
    </style>

    <style name="LogoSmallImageStyle">
        <item name="android:layout_width">@dimen/size_logo_small</item>
        <item name="android:layout_height">@dimen/size_logo_small</item>
    </style>

    <style name="InputLabelGreyLargeStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="InputLabelRougeSmallStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:layout_height">@dimen/height_input_normal</item>
        <item name="android:background">@drawable/background_textbox</item>
        <item name="android:inputType">text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:textColorHint">@color/pinkish_grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingStart">@dimen/spacing_extra_small</item>
        <item name="android:paddingEnd">@dimen/spacing_extra_small</item>
    </style>

    <style name="ButtonNextAction" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height_tall</item>
        <item name="android:background">@drawable/btn_next_selector</item>
        <item name="android:fontFamily">@font/lucida_grande</item>
        <item name="android:text">@string/action_next</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="WhiteHeadingStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="GreyTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="GreySmallTextStyle" parent="GreyTextStyle">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="PinkishGreySmallTextStyle" parent="GreyTextStyle">
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:textSize">@dimen/font_extra_small</item>
    </style>

    <style name="GreyLinkStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">@dimen/font_small</item>
        <!--<item name="android:textAllCaps">true</item>-->
    </style>

    <style name="WhiteCardStyle" parent="CardView">
        <item name="android:background">@drawable/background_white_rounded_card_shadow</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="GreyCardStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/brownish_grey</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="TextShadowCover" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ButtonOvalShape" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/lucida_grande</item>
        <item name="android:background">@drawable/background_oval_white_shadow</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ButtonNeutralAction" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/lucida_grande</item>
        <item name="android:background">@drawable/btn_small_bordered_grey</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ButtonPositiveAction" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/lucida_grande</item>
        <item name="android:background">@drawable/btn_small_bordered_rouge</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ButtonRedAlertAction" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/lucida_grande</item>
        <item name="android:background">@drawable/bordered_card_rouge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ButtonLargeGreyTitle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:background">@drawable/bordered_card_brownish_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAppearance">@style/TextShadowCover</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderBar">
        <item name="android:background">#303F9F</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/white</item>

        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_cancel</item>

        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_back_grey</item>

        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions shopReviews view-->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/brownish_grey</item>

        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/pinkish_grey</item>

        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="ActionTextView">
        <item name="android:layout_width">@dimen/size_card_square</item>
        <item name="android:layout_height">@dimen/size_card_square</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">@dimen/font_small_heading</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_tiny</item>
    </style>

    <style name="RedHeaderBar">
        <item name="android:background">@color/primary_red</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
